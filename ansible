
pipeline{
     agent {
	     node{
		  label ''
	 }
 }
	  stages {
		    stage('Ansible started'){
			  steps{
			      sh 'echo "ansible start....!"'
			  }
			}
			stage('change folder'){
			  steps{
			      sh 'cd /var/lib/jenkins/workspace'
				  sh 'echo "Changing folder....!"'
			  }
			}
			stage('Remove folder'){
			  steps{
			      sh 'cd /var/lib/jenkins/workspace'
			      sh 'rm -rf *'
				  sh 'echo "Remove folder....!"'
			  }
			}
			stage('Git clone'){
			  steps{
			     sh 'cd /var/lib/jenkins/workspace/first-job'
			     sh 'git clone https://github.com/selvakann/document.git'
		            
			  }
			}
			stage('wait for cloning to be complete'){
			  steps{
			    echo 'Waiting 30 seconds cloning to be complete'
 			    sleep 3
		            }
			}
		stage('Ansible playbook'){
			  steps{
			      sh 'cd /var/lib/jenkins/workspace/first-job/document/ && ansible-playbook test.yml -b -vvv'
			     
			  }
			}
	
}	
}
